# Voice Agent Server Configuration
# Copy this file to .env and fill in your actual values

# ================================
# REQUIRED API KEYS
# ================================
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google/credentials.json

# ================================
# SERVER SETTINGS
# ================================
HOST=0.0.0.0
PORT=7860
MAX_CONNECTIONS=25
CONNECTION_TIMEOUT=300
SESSION_TIMEOUT=300

# ================================
# WEBSOCKET SETTINGS
# ================================
WS_MAX_SIZE=16777216
WS_PING_INTERVAL=20
WS_PING_TIMEOUT=10

# ================================
# PERFORMANCE SETTINGS
# ================================
KEEP_ALIVE_TIMEOUT=30
CLEANUP_INTERVAL=60
ENABLE_METRICS=true

# ================================
# LOGGING
# ================================
LOG_LEVEL=INFO
ACCESS_LOG=false

# ================================
# SERVER MODE
# ================================
WEBSOCKET_SERVER=fast_api

# ================================
# OPENAI SETTINGS
# ================================
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=150

# ================================
# GOOGLE STT SETTINGS
# ================================
GOOGLE_STT_LANGUAGE=en-US
GOOGLE_STT_MODEL=latest_long
GOOGLE_STT_ENABLE_INTERIM=true

# ================================
# GOOGLE TTS SETTINGS
# ================================
GOOGLE_TTS_VOICE=en-US-Chirp3-HD-Achernar
GOOGLE_TTS_SAMPLE_RATE=24000

# ================================
# AUDIO SETTINGS
# ================================
SAMPLE_RATE=24000
CHANNELS=1

# ================================
# PIPELINE SETTINGS
# ================================
ENABLE_INTERRUPTIONS=true
ENABLE_STREAMING=true

# ================================
# VAD SETTINGS
# ================================
VAD_STOP_SECS=0.5
VAD_START_SECS=0.2
VAD_MIN_VOLUME=0.6

# ================================
# NOTES
# ================================
# - Set MAX_CONNECTIONS to control concurrent user limit
# - CONNECTION_TIMEOUT controls how long inactive connections are kept
# - Lower VAD_STOP_SECS for more responsive interruptions
# - Higher OPENAI_TEMPERATURE for more creative responses
# - ENABLE_METRICS=true for monitoring (slight performance impact)
